func onPress8() {
  handlePress(SC_I, SK_PR, SC_8, SC_NONE, SC_UP);

  if (layer & SETTINGS_MASK) {
    if (brightness < 8) {
      brightness = brightness + 1;
      updateKeyRgb();
      updateUnderglowRgb();
      updateScreenContrast();
    }
    drawBrightness();
  }
}
func onRelease8() { handleRelease(SC_I, SK_PR, SC_8, SC_NONE, SC_UP); }

