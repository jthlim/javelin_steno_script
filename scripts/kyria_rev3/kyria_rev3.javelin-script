  handleRelease(SC_L_ALT, SK_A, SC_L_ALT, SC_NONE, SC_NONE);
  if ((layer | otherPressCount) == 0 && getTime() - timer42 < TAP_THRESHOLD) {
    otherPressCount = otherPressCount + 1;
    tapScanCode(SC_ENTER);
  }
}

