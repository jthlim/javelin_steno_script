    wasSteno36 = layer == STENO_MASK;
    if (wasSteno36) {
      setLayer(layer | TEMPORARY_QWERTY_MASK);
    }
  }
  handlePress(36, SC_L_META, SC_NONE, SC_L_META, SC_NONE, SC_NONE, SC_NONE);
